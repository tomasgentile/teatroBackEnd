<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="d-flex justify-content-between">
                <h2 class="mt-3">Modificar un Curso</h2>
                <p class= "mt-3"><a class="btn btn-primary" href="/admin/cursos">Volver</a></p>
            </div>
            {{#if error}}
                <div class="alert alert-danger" role="alert">
                    <p class="text-danger text-center mt-3">{{message}}</p>
                </div>
            {{else}}
            
            <form action="/admin/cursos/updateCursos" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{curso.id_curso}}" name="id_curso" />
                <div class="form-group mt-3">
                    <input type="text" class="form-control" value="{{curso.nombre_curso}}" name="nombre_curso">
                </div>
                <div class="form-group mt-3">
                    <label for="id_teatro" class="col-sm-2 col-form-label">Teatro</label>
                    <select id="lista_teatros" class="form-control" name="id_teatro">
                        {{#each teatros}}
                            <option value="{{id_teatro}}" label="{{nombre_teatro}}"></option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group mt-3">
                    <label for="docentes" class="col-sm-2 col-form-label">Docentes</label>
                    <textarea type="text" class="form-control" name="docentes">{{curso.docentes}}</textarea>
                </div>
                <div class="form-group mt-3">
                    <label for="resumen" class="col-sm-2 col-form-label">Resumen</label>
                    <textarea type="text" class="form-control" name="resumen">{{curso.resumen}}</textarea>
                </div>
                <div class="form-group mt-3">
                    <label for="horario" class="col-sm-2 col-form-label">Horario</label>
                    <input type="text" class="form-control" value="{{curso.horario}}" name="horario"></input>
                </div>
                 <div class="form-group mt-3">
                    <label for="fecha_inicio" class="col-sm-4 col-form-label">Fecha de inicio</label>
                    <input type="date" class="form-control" value="{{curso.fecha_inicio}}" name="fecha_inicio" id="fecha_inicio"></input>
                </div>
                 <div class="form-group mt-3">
                    <label for="fecha_fin" class="col-sm-4 col-form-label">Fecha de finalización</label>
                    <input type="date" class="form-control" value="{{curso.fecha_fin}}" name="fecha_fin" id="fecha_fin"></input>
                </div>
                <div class="form-group mt-3">
                    <label for="clasificacion" class="col-sm-4 col-form-label">Clasificación</label>
                    <input type="text" class="form-control" value="{{curso.clasificacion}}" name="clasificacion"></input>
                </div>
                <div class="form-group mt-3">
                     <label for="imagen" class="col-sm-4 col-form-label">Imagen de presentación</label>
                    <input type="file" class="form-control mb-3" placeholder="Imagen" id="imagen" name="imagen"/>
                    <label for="img_delete" class="col-sm-4 col-form-label">Eliminar la imagen actual?</label>
                    <input type="checkbox" class="form-check-input mt-2" name="img_delete" id="img_delete" value="1" />
                    <input type="hidden" name="img_original" value="{{curso.img_id_curso}}" />
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class= "btn btn-primary">Modificar</button>
                </div>
            </form>
            {{/if}}
        </div>
    </div>
</div>