<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="d-flex justify-content-between">
                <h2 class="mt-3">Agregar una Obra</h2>
                <p class= "mt-3"><a class="btn btn-primary" href="/admin/obras">Volver</a></p>
            </div>
            {{#if error}}
                <div class="alert alert-danger" role="alert">
                    <p class="text-danger text-center mt-3">{{message}}</p>
                </div>
            {{/if}}
            <form action="/admin/obras/insertObras" method="post" enctype="multipart/form-data">
                <div class="form-group mt-3">
                    <input type="text" class="form-control" placeholder="Título" name="nombre_obra">
                </div>
                <div class="form-group mt-3">
                    <label for="id_teatro" class="col-sm-2 col-form-label">Teatro</label>
                    <select id="lista_teatros" class="form-control" name="id_teatro">
                        {{#each teatros}}
                            <option value="{{id_teatro}}" label="{{nombre_teatro}}"></option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group mt-3">
                    <textarea type="text" class="form-control" placeholder="Elenco" name="elenco"></textarea>
                </div>
                <div class="form-group mt-3">
                    <input type="text" class="form-control" placeholder="Dirección" name="direccion"></input>
                </div>
                <div class="form-group mt-3">
                    <textarea type="text" class="form-control" placeholder="Resumen" name="resumen"></textarea>
                </div>
                <div class="form-group mt-3">
                    <input type="text" class="form-control" placeholder="Horario funciones" name="horario_funciones"></input>
                </div>
                 <div class="form-group mt-3">
                    <label for="fecha_inicio" class="col-sm-4 col-form-label">Fecha de inicio</label>
                    <input type="date" class="form-control" name="fecha_inicio" id="fecha_inicio"></input>
                </div>
                 <div class="form-group mt-3">
                    <label for="fecha_fin" class="col-sm-4 col-form-label">Fecha de finalización</label>
                    <input type="date" class="form-control" name="fecha_fin" id="fecha_fin"></input>
                </div>
                <div class="form-group mt-3">
                    <input type="text" class="form-control" placeholder="Clasificación" name="clasificacion"></input>
                </div>
                <div class="form-group mt-3">
                    <label for="imagen" class="col-sm-4 col-form-label">Imagen de presentación</label>
                    <input type="file" class="form-control" placeholder="Imagen" id="imagen" name="imagen"></input>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class= "btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>