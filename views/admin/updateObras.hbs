<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="d-flex justify-content-between">
                <h2 class="mt-3">Modificar una Obra</h2>
                <p class= "mt-3"><a class="btn btn-primary" href="/admin/obras">Volver</a></p>
            </div>
            {{#if error}}
                <div class="alert alert-danger" role="alert">
                    <p class="text-danger text-center mt-3">{{message}}</p>
                </div>
            {{else}}
            
            <form action="/admin/obras/updateObras" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{obra.id_obra}}" name="id_obra">
                <div class="form-group mt-3">
                    <input type="text" class="form-control" value="{{obra.nombre_obra}}" name="nombre_obra">
                </div>
                <div class="form-group mt-3">
                    <label for="id_teatro" class="col-sm-2 col-form-label">Teatro</label>
                    <select id="lista_teatros" class="form-control" name="id_teatro">
                        {{#each teatros}}
                            <option value="{{id_teatro}}" label="{{nombre_teatro}}"></option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group mt-3">
                    <label for="elenco" class="col-sm-4 col-form-label">Elenco</label>
                    <textarea type="text" class="form-control" name="elenco">{{obra.elenco}}</textarea>
                </div>
                <div class="form-group mt-3">
                    <label for="direccion" class="col-sm-4 col-form-label">Direcci贸n</label>
                    <input type="text" class="form-control" value="{{obra.direccion}}" name="direccion"></input>
                </div>
                <div class="form-group mt-3">
                    <label for="resumen" class="col-sm-4 col-form-label">Resumen</label>
                    <textarea type="text" class="form-control" name="resumen">{{obra.resumen}}</textarea>
                </div>
                <div class="form-group mt-3">
                    <label for="horario_funciones" class="col-sm-4 col-form-label">Horario funciones</label>
                    <input type="text" class="form-control" value="{{obra.horario_funciones}}" name="horario_funciones"></input>
                </div>
                 <div class="form-group mt-3">
                    <label for="fecha_inicio" class="col-sm-4 col-form-label">Fecha de inicio</label>
                    <input type="date" class="form-control" value="{{obra.fecha_inicio}}" name="fecha_inicio" id="fecha_inicio"></input>
                </div>
                 <div class="form-group mt-3">
                    <label for="fecha_fin" class="col-sm-4 col-form-label">Fecha de finalizaci贸n</label>
                    <input type="date" class="form-control" value="{{obra.fecha_fin}}" name="fecha_fin" id="fecha_fin"></input>
                </div>
                <div class="form-group mt-3">
                    <label for="clasificacion" class="col-sm-4 col-form-label">Clasificaci贸n</label>
                    <input type="text" class="form-control" value="{{obra.clasificacion}}" name="clasificacion"></input>
                </div>
                <div class="form-group mt-3">
                    <label for="imagen" class="col-sm-4 col-form-label">Imagen de presentaci贸n</label>
                    <input type="file" class="form-control mb-3" placeholder="Imagen" id="imagen" name="imagen"/>
                    <label for="img_delete" class="col-sm-4 col-form-label">Eliminar la imagen actual?</label>
                    <input type="checkbox" class="form-check-input mt-2" name="img_delete" id="img_delete" value="1" />
                    <input type="hidden" name="img_original" value="{{obra.img_id_obra}}" />
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class= "btn btn-primary">Modificar</button>
                </div>
            </form>
            {{/if}}
        </div>
    </div>
</div>