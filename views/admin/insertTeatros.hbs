<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="d-flex justify-content-between">
                <h2 class="mt-3">Agregar un Teatro</h2>
                <p class= "mt-3"><a class="btn btn-primary" href="/admin/teatros">Volver</a></p>
            </div>
            {{#if error}}
                <div class="alert alert-danger" role="alert">
                    <p class="text-danger text-center mt-3">{{message}}</p>
                </div>
            {{/if}}
            <form action="/admin/teatros/insertTeatros" method="post" enctype="multipart/form-data">
                <div class="form-group mt-3">
                    <input type="text" class="form-control" placeholder="Nombre" name="nombre_teatro">
                </div>
                <div class="form-group mt-3">
                    <input type="text" class="form-control" placeholder="Dirección" name="direccion"></input>
                </div>
                <div class="form-group mt-3">
                    <input type="text" class="form-control" placeholder="Teléfono" name="telefono"></input>
                </div>
                <div class="form-group mt-3">
                    <input type="email" class="form-control" placeholder="Mail" name="mail"></input>
                </div>
                <div class="form-group mt-3">
                    <label for="imagen" class="col-sm-4 col-form-label">Imagen de presentación</label>
                    <input type="file" class="form-control" placeholder="Imagen" id="imagen" name="imagen"></input>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class= "btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>