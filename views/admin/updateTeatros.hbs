<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="d-flex justify-content-between">
                <h2 class="mt-3">Modificar un Teatro</h2>
                <p class= "mt-3"><a class="btn btn-primary" href="/admin/teatros">Volver</a></p>
            </div>
            {{#if error}}
                <div class="alert alert-danger" role="alert">
                    <p class="text-danger text-center mt-3">{{message}}</p>
                </div>
            {{else}}
            
            <form action="/admin/teatros/updateTeatros" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{teatro.id_teatro}}" name="id_teatro" />
                <div class="form-group mt-3">
                    <input type="text" class="form-control" value="{{teatro.nombre_teatro}}" name="nombre_teatro">
                </div>
                <div class="form-group mt-3">
                    <input type="text" class="form-control" value="{{teatro.direccion}}"  name="direccion"></input>
                </div>
                <div class="form-group mt-3">
                    <input type="text" class="form-control" value="{{teatro.telefono}}" name="telefono"></input>
                </div>
                <div class="form-group mt-3">
                    <input type="email" class="form-control" value="{{teatro.mail}}" name="mail"></input>
                </div>
                <div class="form-group mt-3">
                    <label class="col-sm-4 col-form-label" for="img" class="col-sm-4 col-form-label">Imagen de presentación</label>
                    <input type="file" class="form-control" id="imagen" name="imagen"></input>
                    <label class="col-sm-4 col-form-label mt-3" for="img_delete">Eliminar la imágen acutal?</label>
                    <input type="checkbox" class="form-check-input mt-4" name="img_delete" value="1" />
                    <input type="hidden" name="img_original" value="{{teatro.img_id_teatro}}" />
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class= "btn btn-primary">Modificar</button>
                </div>
            </form>
            {{/if}}
        </div>
    </div>
</div>